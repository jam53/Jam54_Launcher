<Window x:Class="Jam54LauncherStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jam54LauncherStarter"
        mc:Ignorable="d"
        Title="Jam54LauncherStarter" Height="350" Width="300" ResizeMode="NoResize" WindowState="Normal" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
            <GradientStop Color="#FF101431"/>
            <GradientStop Color="#FF093F41" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <MediaElement x:Name="MyMediaElement" Margin="
                      0" Source="Jam54LauncherStarterAnimation.mp4" LoadedBehavior="Play" MediaEnded="MediaElement_MediaEnded"></MediaElement>
    </Grid>
</Window>
